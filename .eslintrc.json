{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "plugins": [
        "jest"
    ],
    "overrides": [
        {
            "files": ["**/*.test.js"],
            "env": { "jest/globals": true },
            "plugins": ["jest"],
            "extends": ["plugin:jest/recommended"]
        }
    ],
    "rules": {
        "no-console": "off",
        "no-underscore-dangle": "off",
        "camelcase": "off",
        "class-methods-use-this": "off",
        "max-len": "off",
        "no-unused-vars": "off"
    }
}
